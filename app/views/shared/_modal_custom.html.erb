<%
  # This modal has no buttons, expectation is that buttons are provided by main content
  title = "" unless local_assigns[:title]
  id = "cc_model" unless local_assigns[:id]
%>
<div id="<%= id %>" class="modal" tabindex="-1" data-controller="modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><%= title %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <%= yield %>
    </div>
  </div>
</div>
